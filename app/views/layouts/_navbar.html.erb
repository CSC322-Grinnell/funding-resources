<nav class="navbar navbar-expand-lg" id="<%= cookies[:theme] %>">
  <a id = "navbarIcon">
    <%= link_to root_path do %>
    <%= image_tag "Logo.png", class: "navbar-brand" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </a>

  <% if cookies[:theme] == "light" %>
    <%= link_to "dark mode: off", root_path(:theme => "dark", :current_path => request.path), class: "darkButton"%>
  <% else %>
    <%= link_to "dark mode: on", root_path(:theme => "light", :current_path => request.path), class: "lightButton"%>
  <% end %>
  
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <i class="fas fa-bars"></i>
  </button>
  
  <div class="collapse navbar-collapse sticky-top" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "Resources", funds_path, class: "#{"active" if (current_page? funds_path)}"%>
      </li>
      <li class="nav-item">
        <a><%= link_to "Browse", browse_path, class: "#{"active" if (current_page? browse_path)}"%></a>
      </li>
      <li class="nav-item">
        <a><%= link_to "Contact", contact_path, class: "#{"active" if (current_page? contact_path)}"%></a>
      </li>
    </ul>
  </div>
</nav>