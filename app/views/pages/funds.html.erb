  <body>
  <div class="text-center">
    <h1> Resources </h1>
  </div>
  
  <div class="container">
  <div class="row">
    
    <!-- left hand navigation bar -->
    <div class="col-5">
    <div class="sidenav">
      <a href="#">About</a>
      <a href="#">Services</a>
      <a href="#">Clients</a>
      <a href="#">Contact</a>
    </div>
    </div>
  
  
    <!-- rendered funds -->
    <div class="card-deck">
      <% @resources.each do |resource| %>
        <div class="card", style="width: 40px;">
          <h5 class="card-title"><%= resource.title %></h5>
          <div class="card-body">
            <p class="card-text">This will be the resource description.</p>
          </div>
        </div>
      <% end %>
    </div>
   
  </div>
  </div> 
  
